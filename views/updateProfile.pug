doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    // This file has been downloaded from bootdey.com    @bootdey on twitter
    // All snippets are MIT license http://bootdey.com/license
    title Edit profile page - Bootdey.com
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='http://netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet')
    style(type='text/css').
      body{
      margin-top:20px;
      background:#f5f5f5;
      }
      /**
      * Panels
      */
      /*** General styles ***/
      .panel {
      box-shadow: none;
      }
      .panel-heading {
      border-bottom: 0;
      }
      .panel-title {
      font-size: 17px;
      }
      .panel-title > small {
      font-size: .75em;
      color: #999999;
      }
      .panel-body *:first-child {
      margin-top: 0;
      }
      .panel-footer {
      border-top: 0;
      }
      .panel-default > .panel-heading {
      color: #333333;
      background-color: transparent;
      border-color: rgba(0, 0, 0, 0.07);
      }
      form label {
      color: #999999;
      font-weight: 400;

      }
      .form-horizontal .form-group {
      margin-left: -15px;
      margin-right: -15px;
      }
      @media (min-width: 768px) {
      .form-horizontal .control-label {
      text-align: right;
      margin-bottom: 0;
      padding-top: 7px;
      }
      }
      .profile__contact-info-icon {
      float: right;
      font-size: 18px;
      color: #999999;
      }
      .profile__contact-info-body {
      overflow: hidden;
      padding-left: 20px;
      color: #999999;
      }
      .profile-avatar {
      width: 200px;
      position: relative;
      margin: 0px auto;
      margin-top: 196px;
      border: 4px solid #f3f3f3;
      }
  body
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' rel='stylesheet')
    .container.bootstrap.snippets.bootdeys
      .row
        .col-xs-12.col-sm-9
          form.form-horizontal(action ="/api/profile/updateProfile" method = "POST" )
            .panel.panel-default
              .panel-body.text-center
                img.img-circle.profile-avatar(src='https://bootdey.com/img/Content/avatar/avatar6.png' alt='User avatar')
            .panel.panel-default
              .panel-heading
                h4(style="text-align:right;").panel-title מידע כללי
              .panel-body
                   
                .form-group
                  label.col-sm-2.control-label שם פרטי
                  .col-sm-10
                    input.form-control(type='text'  ,value = `${user.firstName}`, name = "firstName" )
                .form-group
                  label.col-sm-2.control-label שם משפחה
                  .col-sm-10
                    input.form-control(type='text' ,value = `${user.lastName}`, name = "lastName")
                .form-group
                  label.col-sm-2.control-label תחום עיסוק
                  .col-sm-10
                    input.form-control(type='text' ,value = `${user.title}`, name = "titleName")
                .form-group
                  label.col-sm-2.control-label איימל
                  .col-sm-10
                    input.form-control(type='email' ,value = `${user.email}`, name = "email")
                .form-group
                  label.col-sm-2.control-label נייד
                  .col-sm-10
                    input.form-control(type='tel' ,value = `${user.phone}`, name = "phone")
                .form-group
                  label.col-sm-2.control-label כתובת
                  .col-sm-10
                    input.form-control(type='text' ,value = `${user.address}`, name = "address")
            .panel.panel-default
              .panel-heading
                h4(style="text-align:right;").panel-title רשתות חברתיות
              .panel-body
                .form-group
                  label.col-sm-2.control-label Github
                  .col-sm-10
                    input.form-control(type='text' ,value = `${user.github}`, name = "github")
                .form-group
                  label.col-sm-2.control-label Twitter
                  .col-sm-10
                    input.form-control(type='text' ,value = `${user.twitter}`, name = "twitter")
                .form-group
                  label.col-sm-2.control-label Instagram
                  .col-sm-10
                    input.form-control(type='text' ,value = `${user.instagram}`, name = "instagram")
                .form-group
                  label.col-sm-2.control-label Facebook
                  .col-sm-10
                    input.form-control(type='text' ,value = `${user.facebook}`, name = "facebook")

            .panel.panel-default
              .panel-heading
                h4.panel-title איפוס סיסמא
              .panel-body
                .form-group
                  label.col-sm-2.control-label סיסמא נוכחית
                  .col-sm-10
                    input.form-control(type='password')
                .form-group
                  label.col-sm-2.control-label סיסמא חדשה
                  .col-sm-10
                    input.form-control(type='password')
                .form-group
                  .col-sm-10.col-sm-offset-2
                .form-group
                  .col-sm-10.col-sm-offset-2
                    button.btn.btn-primary(type='submit') שלח
    script(src='http://code.jquery.com/jquery-1.10.2.min.js')
    script(src='http://netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(type='text/javascript').

